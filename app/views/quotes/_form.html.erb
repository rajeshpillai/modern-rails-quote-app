<%= simple_form_for quote, html: { class: "quote form" } do |f| %>
  <% if quote.errors.any? %>
    <div class="error-message">
      <%= quote.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>
  <div class="p-2 m-2">
    <%= f.input :name, input_html: { autofocus: true } %>
    <%= link_to "Cancel", quotes_path, class: "btn btn--light bg-gray-600 m-2 p-2" %>
    <%= f.submit class: "btn btn--light bg-blue-600 m-2 p-2" %>
  </div>
<% end %>